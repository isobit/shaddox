server :vagrant, {
	:host => "localhost",
	:user => 'vagrant',
	:ssh => {
		:port => 2222,
		:password => 'vagrant'
	},
	:installer => :apt
}

repo :profile, {
	:url => "https://github.com/joshglendenning/profile.git",
	:shared => 'tmp'
}

task :foo do
	sh "echo 'foo'"
end

task :foobar => :foo do
	sh "echo 'bar'"
end

task :install do
	repo_deploy :profile, "~/repo_test/profile" do
		ln_s './current', '/var/www/profile'
	end
end

task :broken => :foo do
	sh "notacommand"
end

task :sudo do
	sh "sudo echo 'this is a sudo echo'"
end
